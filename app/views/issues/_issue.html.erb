<%= form_for [@project, @issue] do |p|%>
	<div class = "form">
		<h3>Add New Issue</h3>
		<ul>
	    <% @issue.errors.full_messages.each do |error| %>
	    <li><%= error %></li>
	    <% end %>
	  </ul>
	  <div class = "form-group">
		  <p>
		  	<%= p.label :title, class: "form-label" %><br/>
		    <%= p.text_field :title, class: "form-control", :required => true%>
		  </p>
		</div>
		<div>
		  <p>
		  	<%= p.label :description, class: "form-label" %><br/>
		    <%= p.text_area :description, class: "form-control" %>
		  </p>
		</div>
		<div>
		  <p>
		  	<%= p.label :deadline, class: "form-label" %>
		    <%= p.text_field :deadline, class: "form-control", class: "datepicker"%>
		  </p>
		</div>
		<div class = "form-group">
		  <p>
		  	<%= p.label :priority, class: "form-label" %>
		  	<%= p.select(:priority, options_for_select([["High", "High"], ["Normal", "Normal"], ["Low", "Low"]])) %>
		  </p>
		</div>
		<div class = "form-group">
			<p>
				<%= p.submit %>
			</p>
		</div>
		<%= link_to "Back To Project", project_path(@project.id), class: "btn btn-primary"%>
	</div>
<% end %>

