<div class = "available-user">
	<div class = "row">
		<div class = "col-sm-6">
			<h2>Available users</h2>
			<%= form_tag project_issue_issues_add_members_path(@project.id, @issue.id) do%>
				<table class = "table table-hover">
					<tbody>
						<% @users.each do |u| %>
						<tr>
							<td><%= check_box_tag "user_ids[]", u.id%>
							<%= u.email %><td>
						<% end %>
						</tr>
						<tr>
							<td><%= submit_tag ("add selected members")%></td>
						</tr>
					</tbody>
				</table>
			<% end %>
			<%= link_to "Back To Project", project_path(@project.id), class: "btn btn-primary"%>
		</div>
		<div class = "col-sm-6">
			<h2>Assigned Members</h2>
			<table class = "table table-hover">
				<tbody>
					<% @members.each do |m|%>
					<tr>
						<td><%= m.email %></td>
					<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>