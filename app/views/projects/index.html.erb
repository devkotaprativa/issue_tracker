<div class = "container-fluid">
	<div class = "row">
		<% @projects.each do |p| %>
			<div class = "col-sm-4">
				<p>
					Name: <%= p.project_name %><br>
					Start Date: <%= p.start_date %><br>
					Target Date: <%= p.target_end_date %><br>
					End Date: <%= p.final_end_date %><br>
					Assigned Members: <%= p.users.count%><br>
					<%= link_to "Edit Project", edit_project_path(p.id), class: "btn btn-primary"%>
					<%= link_to "Delete", project_path(p.id),  class: "btn btn-primary", method: :delete, data: {confirm: "Really delete the post?"} %>
					<%= link_to "Add Member", projects_show_members_path( :project_id => p.id),method: :post, class: "btn btn-primary"%>
				</p>
			</div>
		<% end %>
	</div>
	<%= link_to "Create New Project", new_project_path%>
</div>
