<div class = "available-user">
	<div class = "row">
		<div class = "col-sm-6">
			<h2>Available users</h2>
			<%= form_tag projects_add_members_path, method: :post do%>
				<table class = "table table-hover">
					<tbody>
						<% @users.each do |u| %>
							<tr>
								<td><%= check_box_tag "user_ids[]", u.id, false, :disabled=>is_assigned_to_project(@project, u.id)%>
								<%= u.email %></td>
							</tr>
						<% end %>
						<%= hidden_field_tag "project_id", @project.id%>
						<tr>
							<td><%= submit_tag ("add selected members")%></td>
						</tr>
					</tbody>
				</table>
			<% end %><br>
			<%= link_to "Back To Projects", projects_path, class: "btn btn-primary"%>
		</div>
		<div class = "col-sm-6">
			<h2>Project Members</h2>
			<% if @members.present? %>
					<%= form_tag remove_members_projects_path( :project_id => @project.id) do%>
					<table class = "table table-hover">
						<tbody>
							<tr>
								<% @members.each do|u| %>
									<td><%= check_box_tag "user_ids[]", u.id%>
									<%= u.email%></td>
							</tr>
							<% end %>
							<%= hidden_field_tag "project_id", @project.id%>
							<tr>
							<td><%= submit_tag ("Remove selected members")%></td>
						</tr>
						</tbody>
					</table>
				<% end %>
			<% end %>
		</div>
	</div>
</div>

